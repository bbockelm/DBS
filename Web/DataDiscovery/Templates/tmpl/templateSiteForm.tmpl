<div id="siteDef">
<b>
Site selector:
</b>
</td>
<td>

<div id="form2_siteHolder">
<select id="form2_siteSelector" name="site">
#*
#for site in $siteList
<option value="$site">$site</option>
#end for
*#
<option value="any" selected="selected">Any</option>
#set iList=$siteDict.keys()
