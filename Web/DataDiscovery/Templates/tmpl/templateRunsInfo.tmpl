function reload(adminFlag) {
   var myUrl=window.location.href;
   if(myUrl.search("admin")>0) {
     if (adminFlag==1) {
         url=myUrl.replace(/admin=0/g,'admin=1');
     } else {
         url=myUrl.replace(/admin=1/g,'admin=0');
     }
   } else {
     if(myUrl.search(/\?/)>0) {
       url=myUrl+"&admin="+adminFlag;
     } else {
       url=myUrl+"?admin="+adminFlag;
     }
   }
   load(url);
}
